{
  "name": "kibble-template-tvod",
  "version": "0.0.3",
  "description": "Base template for TVOD kibble sites",
  "scripts": {
    "start": "npm run css && npm-run-all --parallel css:watch js:watch kibble:watch",
    "css": "node-sass ./site/styles/main.scss ./site/static/styles/main.css",
    "css:watch": "npm run css -- --watch",
    "css:build": "postcss ./site/static/styles/main.css --use autoprefixer --use cssnano -r",
    "js": "rollup -c",
    "js:watch": "rollup -c -w",
    "js:build": "rollup -c",
    "kibble": "kibble render",
    "kibble:watch": "kibble render --watch --port 8081",
    "kibble:build": "kibble publish",
    "build": "npm-run-all css css:build kibble:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/indiereign/shift72-kibble-template-svod.git"
  },
  "keywords": [
    "Kibble",
    "Template"
  ],
  "engines": {
    "node": ">=10.0.0"
  },
  "author": "Shift 72",
  "dependencies": {
    "autoprefixer": "^7.1.2",
    "bootstrap": "^4.3.1",
    "cssnano": "^4.1.10",
    "font-awesome": "^4.7.0",
    "node-sass": "^4.14.0",
    "npm-run-all": "^4.1.5",
    "postcss-cli": "^6.1.3",
    "rollup": "^2.23.0",
    "rollup-plugin-terser": "^6.1.0",
    "@rollup/plugin-buble": "^0.21.3",
    "auth0-js": "^9.16.0",
    "s72-kibble": "^0.15.5"
  },
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^9.0.0",
    "dotenv": "^8.4.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-inject-process-env": "^1.3.1"
  }
}
